<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
android:padding="30dp"
tools:context=".MakeSelection">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/forget_password_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:src="@drawable/general_back_icon" />


    <TextView
        android:id="@+id/forget_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/bungee"
        android:includeFontPadding="false"
        android:text="Make\nSelection"
        android:padding="5dp"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="40sp" />


    <TextView
        android:id="@+id/forget_password_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mulilight"
        android:text="Select which contact detail should we use to reset your password?"
        android:textColor="@color/black"
        android:padding="10dp"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="50dp"
        android:background="#DFEFEF"
        android:padding="10dp">

        <ImageView
            android:id="@+id/mobile_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/mobile_custom_icon"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/mobile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="via sms:"
            android:textSize="25sp"
            android:fontFamily="@font/mulilight"
            android:layout_toRightOf="@+id/mobile_icon"
            android:layout_marginTop="35dp"/>

        <TextView
            android:id="@+id/mobile_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91 XXXXXX0681"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:fontFamily="@font/mulilight"
            android:layout_toRightOf="@+id/mobile_icon"
            android:layout_below="@+id/mobile_title" />

        <Button
            android:id="@+id/sms_option"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:background="#DFEFEF"
        android:padding="10dp">

        <ImageView
            android:id="@+id/mail_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/mail_custom_icon"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/mail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="via mail:"
            android:textSize="25sp"
            android:fontFamily="@font/mulilight"
            android:layout_toRightOf="@+id/mail_icon"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/mail_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="support@gmail.com"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/mulilight"
            android:layout_toRightOf="@+id/mail_icon"
            android:layout_below="@+id/mail_title" />

        <Button
            android:id="@+id/email_option"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"/>

    </RelativeLayout>


</LinearLayout>




</ScrollView>